{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">

        <div class="header">
            <a class="button" href="/instructors/create">Create New</a>
            <form action="/instructors" method="GET">
                <input 
                    type="text"
                    name="filter"
                    placeholder="Name or Services"
                    value={{filter}}
                >
                <button type="submit">Filter</button>
            </form>
        </div>

        <table width="100%">
            <thead>
                <tr>
                    <th>Instructor</th>
                    <th>Services</th>
                    <th>Clients</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for instructor in instructors %}
                <tr>
                    <td>
                        <span style="background-image: url({{ instructor.avatar_url }})"></span>
                        {{ instructor.name }}
                    </td>
                    <td>{{ instructor.services }}</td>
                    <td>{{ instructor.total_clients }}</td>
                    <td><a href="/instructors/{{instructor.id}}">Access</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="pagination"
            data-page={{pagination.page}}
            data-total={{pagination.total}}
            data-filter={{filter}}
        ></div>
    
    </div>

{% endblock content %}